@article{rodriguesImpactSocialMedia2023,
  title = {The {{Impact}} of {{Social Media}} on {{Vaccination}}: {{A Narrative Review}}},
  shorttitle = {The {{Impact}} of {{Social Media}} on {{Vaccination}}},
  author = {Rodrigues, Flinta and Ziade, Nelly and Jatuworapruk, Kanon and {Caballero-Uribe}, Carlo V and Khursheed, Tayyeba and Gupta, Latika},
  year = {2023},
  month = oct,
  journal = {Journal of Korean Medical Science},
  volume = {38},
  number = {40},
  pages = {e326},
  issn = {1011-8934},
  doi = {10.3346/jkms.2023.38.e326},
  urldate = {2024-10-14},
  abstract = {Vaccine hesitancy poses a significant global health challenge, fueled by misinformation and anti-vaccination campaigns on social media platforms (SMPs). This study examines the influence of social media on coronavirus disease 2019 (COVID-19) and non-COVID-19 vaccination in Asia during the peri-pandemic period. Through a comprehensive analysis of available literature, we aim to elucidate the role of SMPs in shaping vaccination attitudes and behaviors. The findings highlight the detrimental impact of social media on vaccination efforts and provide insights into addressing vaccine hesitancy during this critical period. A narrative review was conducted by searching the PubMed, Scopus, and Google Scholar databases from inception to May 26, 2022. Only English-language articles involving human participants from Asian countries were included in this review. Out of the 228 articles identified through the database search, 14 articles were included in the final analysis. The prevalence of COVID-19 vaccine hesitancy or negative attitudes towards COVID-19 vaccines in Asian countries was found to be high, ranging from 20\% to 55\% across countries. Notably, reliance on SMPs for vaccine-related information was associated with a higher likelihood of COVID-19 vaccine hesitancy. This trend coincided with the proliferation of misinformation and conspiracy theories that portrayed COVID-19 vaccines as harmful during the pandemic. Similar patterns were observed for other types of vaccines, including polio, measles mumps and rubella, and diphtheria-tetanus-pertussis vaccines. The use of SMPs was also found to be associated with increased fear among caregivers in Asian countries, as well as a 3--4 times higher likelihood of delayed immunization. SMPs negatively impact vaccine intent in Asia due to misinformation and anti-vaccination campaigns during the pandemic. However, they can be a powerful tool for healthcare providers and policymakers to promote informed decision-making. Efforts should focus on leveraging SMPs to disseminate reliable information and combat hesitancy, fostering a well-informed and vaccinated population in Asia.},
  pmcid = {PMC10578995},
  pmid = {37846789},
  keywords = {Lido,Vacina},
  note = {\begin{enumerate}

\item \textbf{Introdu{\c c}{\~a}o {\`a} Hesita{\c c}{\~a}o Vacinal}: O artigo aborda a hesita{\c c}{\~a}o vacinal, um desafio global que foi intensificado pelas campanhas anti-vacinas e pela desinforma{\c c}{\~a}o nas plataformas de m{\'i}dia social (SMPs). Durante a pandemia de COVID-19, essa hesita{\c c}{\~a}o foi particularmente vis{\'i}vel em muitos pa{\'i}ses asi{\'a}ticos, onde a confian{\c c}a nas SMPs aumentou o n{\'u}mero de pessoas que se opunham {\`a}s vacinas. O estudo revisa a influ{\^e}ncia das SMPs sobre as atitudes de vacina{\c c}{\~a}o contra COVID-19 e outras doen{\c c}as na {\'A}sia, analisando literatura dispon{\'i}vel.
\item \textbf{Impacto das M{\'i}dias Sociais}: As SMPs foram identificadas como fontes importantes de desinforma{\c c}{\~a}o sobre vacinas, o que resultou em maior hesita{\c c}{\~a}o em vacinar. Especificamente, houve uma correla{\c c}{\~a}o clara entre a confian{\c c}a nas SMPs e a relut{\^a}ncia em receber vacinas, com pessoas mais propensas a acreditar em teorias da conspira{\c c}{\~a}o e informa{\c c}{\~o}es erradas sobre os efeitos adversos das vacinas, o que dificultou os esfor{\c c}os de imuniza{\c c}{\~a}o.
\item \textbf{Busca por Informa{\c c}{\~o}es}: O estudo se concentrou em artigos de pa{\'i}ses asi{\'a}ticos dispon{\'i}veis em ingl{\^e}s at{\'e} maio de 2022, utilizando termos de pesquisa relacionados {\`a} vacina{\c c}{\~a}o e hesita{\c c}{\~a}o vacinal nas SMPs. Foram inclu{\'i}dos 14 artigos de uma amostra inicial de 228 estudos. Esses artigos destacaram que a confian{\c c}a nas informa{\c c}{\~o}es sobre vacinas encontradas nas SMPs estava fortemente ligada a uma maior probabilidade de atraso ou recusa de imuniza{\c c}{\~o}es.
\item \textbf{Fatores Culturais e Pol{\'i}ticos}: No contexto asi{\'a}tico, a hesita{\c c}{\~a}o vacinal est{\'a} enraizada em fatores culturais e pol{\'i}ticos espec{\'i}ficos. Por exemplo, em algumas sociedades asi{\'a}ticas, h{\'a} uma tend{\^e}ncia cultural a preferir rem{\'e}dios naturais e a desconfiar da medicina moderna. Al{\'e}m disso, quest{\~o}es pol{\'i}ticas, como a desconfian{\c c}a em rela{\c c}{\~a}o aos governos, tamb{\'e}m influenciam a percep{\c c}{\~a}o p{\'u}blica sobre vacinas.
\item \textbf{Propaga{\c c}{\~a}o de Mitos nas SMPs}: Durante a pandemia de COVID-19, teorias da conspira{\c c}{\~a}o como a inser{\c c}{\~a}o de nanochips nas vacinas e a cren{\c c}a de que as vacinas poderiam alterar o DNA ou causar infertilidade proliferaram nas SMPs, especialmente em pa{\'i}ses como Jord{\^a}nia e Paquist{\~a}o. Esses mitos contribu{\'i}ram para a resist{\^e}ncia {\`a}s vacinas, prejudicando os esfor{\c c}os de imuniza{\c c}{\~a}o em massa.
\item \textbf{Desafios Al{\'e}m da COVID-19}: Embora o foco estivesse em vacinas contra a COVID-19, a hesita{\c c}{\~a}o vacinal tamb{\'e}m afetou outros programas de vacina{\c c}{\~a}o, como os esfor{\c c}os para erradicar a poliomielite e campanhas contra o sarampo. No Paquist{\~a}o, por exemplo, uma campanha de desinforma{\c c}{\~a}o sobre a vacina oral contra poliomielite resultou em um grande aumento no n{\'u}mero de crian{\c c}as n{\~a}o vacinadas.
\item \textbf{Uso Positivo das SMPs}: O estudo tamb{\'e}m destaca o potencial positivo das SMPs como ferramentas para melhorar a aceita{\c c}{\~a}o de vacinas. As plataformas de m{\'i}dia social podem ser utilizadas por profissionais de sa{\'u}de e formuladores de pol{\'i}ticas para disseminar informa{\c c}{\~o}es precisas e combater a hesita{\c c}{\~a}o vacinal, promovendo decis{\~o}es informadas e aumentando a confian{\c c}a nas vacinas.
\item \textbf{Conclus{\~a}o e Limita{\c c}{\~o}es}: O artigo conclui que as SMPs tiveram um impacto negativo sobre a inten{\c c}{\~a}o de vacina{\c c}{\~a}o na {\'A}sia, embora o estudo tenha limita{\c c}{\~o}es, como a exclus{\~a}o de alguns pa{\'i}ses e a natureza mut{\'a}vel das SMPs. A solu{\c c}{\~a}o para combater a hesita{\c c}{\~a}o vacinal inclui a redu{\c c}{\~a}o da interfer{\^e}ncia pol{\'i}tica e a promo{\c c}{\~a}o de fontes confi{\'a}veis de informa{\c c}{\~o}es nas SMPs, garantindo que as popula{\c c}{\~o}es recebam informa{\c c}{\~o}es precisas sobre vacina{\c c}{\~a}o.

\end{enumerate}}
}

