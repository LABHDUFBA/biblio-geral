@article{rezaeiEffectSocialNetworks2017,
  title = {The {{Effect}} of {{Social Networks Usage}} on the {{Promotion}} of {{Pro-environmental}} Behavior in {{Tourism}} ({{Case Study}}: {{Telegram Social Network}})},
  shorttitle = {The {{Effect}} of {{Social Networks Usage}} on the {{Promotion}} of {{Pro-environmental}} Behavior in {{Tourism}} ({{Case Study}}},
  author = {Rezaei, Mahdieh and Shobeiri, Seyed Mohammad},
  year = {2017},
