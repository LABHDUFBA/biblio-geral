  urldate = {2024-09-30},
  abstract = {Tendo em vista que a Internet e, em especial, as redes sociais funcionam como l{\'o}cus para a circula{\c c}{\~a}o de informa{\c c}{\~o}es sobre a COVID-19, o objetivo deste estudo foi verificar a aten{\c c}{\~a}o dispensada {\`a} tem{\'a}tica das vacinas no Instagram e Facebook em postagens feitas ao longo de dois anos de pandemia, identificando a temporalidade em que a discuss{\~a}o sobre os diferentes imunizantes nas redes sociais ocorreu e apontando atores que permearam as discuss{\~o}es envolvendo o tema. A coleta de dados foi feita pela interface gr{\'a}fica do CrowdTangle, a partir de termos de consulta em portugu{\^e}s relacionados {\`a}s vacinas aprovadas para uso no Brasil e contemplou postagens de p{\'a}ginas p{\'u}blicas no Facebook e perfis abertos no Instagram feitas de 1º de janeiro de 2020 a 31 de dezembro de 2021. O banco de dados analisado possui 3.876.408 publica{\c c}{\~o}es (2.901.457 no Facebook e 974.952 no Instagram). Os resultados evidenciaram uma altern{\^a}ncia das vacinas Pfizer, CoronaVac, AstraZeneca e Janssen como foco de discuss{\~a}o, acompanhando temporalmente o debate p{\'u}blico que se estabeleceu no pa{\'i}s em torno dos dilemas e avan{\c c}os relativos ao desenvolvimento, {\`a} produ{\c c}{\~a}o, {\`a} distribui{\c c}{\~a}o e {\`a} aplica{\c c}{\~a}o dos imunizantes. Tamb{\'e}m foram identificadas refer{\^e}ncias {\`a}s institui{\c c}{\~o}es envolvidas na aquisi{\c c}{\~a}o e produ{\c c}{\~a}o dos imunizantes, como o Minist{\'e}rio da Sa{\'u}de, o Instituto Butantan e a Funda{\c c}{\~a}o Oswaldo Cruz (Fiocruz), presentes entre os mil atores sociais que mais despertaram coment{\'a}rios por parte dos usu{\'a}rios em ambas as redes. Evidenciou-se que o debate sobre imunizantes, nos canais e no per{\'i}odo analisados, foi permeado por meios de comunica{\c c}{\~a}o ligados ao jornalismo, al{\'e}m de p{\'a}ginas e perfis ligados a pol{\'i}ticos e celebridades.},
  langid = {portuguese},
  keywords = {Desinformacao,Pandemias,Rede Social,Vacina,Vacinas}
}

@article{casaroesHydroxychloroquineAllianceHow2021,
