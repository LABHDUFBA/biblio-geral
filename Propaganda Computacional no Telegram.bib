@article{schulzeFarrightConspiracyGroups2022,
  title = {Far-Right Conspiracy Groups on Fringe Platforms: A Longitudinal Analysis of Radicalization Dynamics on {{Telegram}}},
  shorttitle = {Far-Right Conspiracy Groups on Fringe Platforms},
  author = {Schulze, Heidi and Hohner, Julian and Greipl, Simon and Girgnhuber, Maximilian and Desta, Isabell and Rieger, Diana},
  year = {2022},
