@article{solopovaTelegramCorpusHate2021,
  title = {A {{Telegram Corpus}} for {{Hate Speech}}, {{Offensive Language}}, and {{Online Harm}}},
  author = {Solopova, Veronika and Scheffler, Tatjana and {Popa-Wyatt}, Mihaela},
  year = {2021},
  month = jul,
  journal = {Journal of Open Humanities Data},
  volume = {7},
  number = {0},
  pages = {9},
  publisher = {Ubiquity Press},
  issn = {2059-481X},
  doi = {10.5334/johd.32},
