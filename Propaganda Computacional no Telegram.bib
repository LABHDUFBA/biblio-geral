@article{chanReliabilityQualityYouTube2021,
  title = {The {{Reliability}} and {{Quality}} of {{YouTube Videos}} as a {{Source}} of {{Public Health Information Regarding COVID-19 Vaccination}}: {{Cross-sectional Study}}},
