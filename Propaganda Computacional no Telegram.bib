@article{nguyenECHOCHAMBERSEPISTEMIC2020,
  title = {{{ECHO CHAMBERS AND EPISTEMIC BUBBLES}}},
  author = {Nguyen, C. Thi},
  year = {2020},
  month = jun,
  journal = {Episteme},
  volume = {17},
  number = {2},
  pages = {141--161},
